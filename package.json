{
    "name": "jvig",
    "version": "0.1.7",
    "description": "GTFS Viewer application written using Typescript & Electron",
    "author": "Mikołaj Kuranowski",
    "license": "GPL-3.0-or-later",
    "main": "build/main.js",
    "scripts": {
        "build": "rm -rf build/* && tsc",
        "build:win32": "rimraf build/ && tsc",
        "start": "npm run build && electron ./build/main.js",
        "start:win32": "npm run build:win32 && electron ./build/main.js",
        "dist": "npm run build && electron-builder --linux",
        "dist:win32": "npm run build:win32 && electron-builder --windows",
        "dist:darwin": "npm run build:win32 && electron-builder --macos"
    },
    "build": {
        "appId": "pl.mkuran.jvig",
        "copyright": "Copyright © 2020-2021 Mikołaj Kuranowski",
        "directories": {
            "output": "dist",
            "buildResources": "dist_resources"
        },
        "files": [
            "build/**/*",
            "www/**/*",
            "icon/**/*",
            "node_modules/**/*"
        ],
        "linux": {
            "target": "AppImage",
            "category": "Development"
        },
        "win": {
            "target": "nsis"
        },
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "nsis": {
            "license": "license.md",
            "deleteAppDataOnUninstall": true,
            "runAfterFinish": false,
            "artifactName": "${productName}-${version}-setup.${ext}"
        }
    },
    "devDependencies": {
        "@types/leaflet": "^1.7.4",
        "@types/yauzl": "^2.9.2",
        "electron": "^12.0.0",
        "electron-builder": "^22.11.7",
        "rimraf": "^3.0.2",
        "ts-standard": "^10.0.0",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "csv-parse": "^4.16.0",
        "leaflet": "^1.7.1",
        "leaflet-extra-markers": "^1.2.1",
        "leaflet.markercluster": "^1.5.0",
        "p-event": "^4.2.0",
        "yauzl": "^2.10.0"
    }
}
